@model GeekShopping.Web.Models.ProductModel

@{
    ViewData["Title"] = "Products";
}

<form asp-action="Update">

    <input asp-for="Id" hidden/>

    <br />

    <div class="container border p-3">

        <h2 class="text-warning">Update Product</h2>

        <hr />

        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

            <div class="col-lg-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:18px"></label>
            </div>
            <div class="col-lg-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-lg-2">
                <label asp-for="Category" class="control-label pt-2" style="font-size:18px;"></label>
            </div>
            <div class="col-lg-10 pb-3">
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="col-lg-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:18px;"></label>
            </div>
            <div class="col-lg-10 pb-3">
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-lg-2">
                <label asp-for="ImageURL" class="control-label pt-2" style="font-size:18px;"></label>
            </div>
            <div class="col-lg-10 pb-3">
                <input asp-for="ImageURL" class="form-control" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>

            <div class="col-lg-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size:18px;"></label>
            </div>
            <div class="col-lg-10 pb-3">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>


            <div class="d-grid gap-2 d-md-block text-end mt-2">
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
                <button class="btn btn-success" type="submit">Update</button>
            </div>

        </div>

    </div>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
