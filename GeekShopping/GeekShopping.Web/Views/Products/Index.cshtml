@model List<GeekShopping.Web.Models.ProductModel>

@{
    ViewData["Title"] = "Products";
}

<br/>
<br/>

<div class="container p-4 border" style="border-radius: 10px;">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-warning">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ViewCreate" class="btn btn-outline-warning">
                <i class="fa-solid fa-plus"></i>
                Create New Product
            </a>
        </div>
    </div>
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>@item.Category</td>
                    <td>
                        <button asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></button>
                        <button asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
                    </td>
                        
                </tr>
            }
           
        </tbody>
    </table>
</div>